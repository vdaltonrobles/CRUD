@model Dish
@{
    ViewData["Title"] = "Add a New Dish";
}

<div class="text-center">
    <h1 class="display-4">Add a new Dish!</h1>
</div>
<a href="/">Home</a>
<form action="/addDish" method="post">
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label>Chef's Name</label>
                <input asp-for="Chef" class="form-control">
                <span asp-validation-for="Chef"></span>
            </div>
            <div class="form-group">
                <label>Name of Dish</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label># of Calories</label>
                <input asp-for="Calories" class="form-control">
                <span asp-validation-for="Calories"></span>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Tastiness</label>
                <select class="form-control" asp-for="Tastiness">
                    <option></option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <span asp-validation-for="Tastiness"></span>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <input type="submit" value="Add Dish" class="btn btn-primary">
        </div>
    </div>
</form>
